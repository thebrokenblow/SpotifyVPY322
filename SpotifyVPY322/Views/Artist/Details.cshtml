@using SpotifyVPY322.Model
@model Artist

@if (Model is not null)
{
    <section class="h-100 h-custom" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card">
                        <div class="card-body p-4">
                            <div class="row">
                                <div class="d-flex gap-5">
                                    <img src="@Model.PhotoUrl" style="width: 250px" class="rounded float-start" alt="@Model.Title">
                                    <div>
                                        <h5 class="mb-3 text-body">
                                            @Model.Title
                                        </h5>
                                    </div>
                                </div>
                                <div class="row">
                                    @foreach (var album in Model.Albums)
                                    {
                                        <div class="col-md-4">
                                            <div class="card album-card">
                                                <a asp-controller="Album" asp-action="Details" asp-route-id="@album.Id">
                                                    <img src="@album.PhotoUrl" class="card-img-top" alt="@album.Title">
                                                    <div class="card-body">
                                                        <h5 class="card-title">@album.Title</h5>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}