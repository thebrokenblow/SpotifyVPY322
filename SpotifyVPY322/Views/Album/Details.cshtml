@using SpotifyVPY322.Model
@model Album

@if (Model is not null)
{
    <section class="h-100 h-custom" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card">
                        <div class="card-body p-4">
                            <div class="row">
                                <div class="d-flex gap-5">
                                    <img src="https://avatars.yandex.net/get-music-content/5587254/4c9bd4b8.a.20509390-1/m1000x1000?webp=false" style="width: 250px" class="rounded float-start" alt="@Model.Title">
                                    <div>
                                        <h5 class="mb-3 text-body">
                                            Альбом @Model.Title
                                        </h5>
                                        <h5 class="mb-3 text-body">
    @*                                         Группы: @Model.Artist.Title *@
                                        </h5>
                                    </div>
                                </div>
                                <div class="col-lg-7 mt-3">
                                    @foreach (var song in Model.Songs)
                                    {
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between">
                                                    <div class="d-flex flex-row align-items-center">
                                                        <div class="ms-3">
                                                            <h5>@song.Title</h5>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex flex-row align-items-center">
                                                        <audio controls src="@song.SongUrl"></audio>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}