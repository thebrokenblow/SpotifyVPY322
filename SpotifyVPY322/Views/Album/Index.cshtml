@using SpotifyVPY322.Dto.Album
@using SpotifyVPY322.Model

@model List<GetAllAlbumDto>
<div class="row">
    @foreach (var album in Model)
    {
        <div class="col-md-4">
            <div class="card album-card">
                <a asp-controller="Album" asp-action="Details" asp-route-id="@album.Id">
                    <img src="https://avatars.yandex.net/get-music-content/5587254/4c9bd4b8.a.20509390-1/m1000x1000?webp=false" class="card-img-top" alt="@album.Title">
                    <div class="card-body">
                        <h5 class="card-title">@album.Title</h5>
                    </div>
                </a>
            </div>
        </div>
    }
</div>